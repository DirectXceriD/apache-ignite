<!--
    Ignite Spring configuration file to startup grid.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <bean id="base-ignite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration">
        <property name="peerClassLoadingEnabled" value="false"/>

        <property name="metricsLogFrequency" value="5000"/>

        <!--<property name="cacheKeyConfiguration">
            <list>
                <bean class="org.apache.ignite.cache.CacheKeyConfiguration">
                    <constructor-arg value="org.apache.ignite.cache.affinity.AffinityKey"/>
                </bean>
            </list>
        </property>-->

        <property name="cacheConfiguration">
            <list>
                <bean class="org.apache.ignite.configuration.CacheConfiguration">
                    <property name="name" value="streamer-cache"/>

                    <property name="cacheMode" value="PARTITIONED"/>

                    <property name="atomicityMode" value="TRANSACTIONAL"/>

                    <property name="queryParallelism" value="16"/>

                    <property name="queryEntities">
                        <bean class="org.apache.ignite.cache.QueryEntity">
                            <property name="tableName" value="ZIP_QUERY_ENTITY"/>
                            <property name="keyType" value="java.lang.String"/>
                            <property name="valueType" value="org.apache.ignite.yardstick.cache.model.ZipQueryEntity"/>
                            <property name="fields">
                                <map>
                                    <entry key="TOTALVALUE" value="double"/>
                                    <entry key="SYS_AUDIT_TRACE" value="java.lang.String"/>
                                    <entry key="BUSINESSDATE" value="java.lang.String"/>
                                    <entry key="BOOKSOURCESYSTEMCODE" value="java.lang.String"/>
                                </map>
                            </property>
                            <property name="indexes">
                                <list>
                                    <bean class="org.apache.ignite.cache.QueryIndex">
                                        <constructor-arg value="BUSINESSDATE"/>
                                        <property name="inlineSize" value="12"/>
                                    </bean>
                                    <bean class="org.apache.ignite.cache.QueryIndex">
                                        <constructor-arg value="BOOKSOURCESYSTEMCODE"/>
                                        <property name="inlineSize" value="12"/>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean class="org.apache.ignite.configuration.CacheConfiguration">
                    <property name="name" value="streamer-cache-2"/>

                    <property name="cacheMode" value="PARTITIONED"/>

                    <property name="atomicityMode" value="TRANSACTIONAL"/>

                    <property name="queryParallelism" value="16"/>

                    <property name="keyConfiguration">
                        <list>
                            <bean class="org.apache.ignite.cache.CacheKeyConfiguration">
                                <constructor-arg value="org.apache.ignite.cache.affinity.AffinityKey"/>
                            </bean>
                        </list>
                    </property>

                    <property name="queryEntities">
                        <bean class="org.apache.ignite.cache.QueryEntity">
                            <property name="tableName" value="ZIP_ENTITY"/>
                            <property name="keyType" value="java.lang.String"/>
                            <property name="valueType" value="org.apache.ignite.yardstick.cache.model.ZipEntity"/>
                            <property name="fields">
                                <map>
                                    <entry key="TOTALVALUE" value="double"/>
                                    <entry key="SYS_AUDIT_TRACE" value="java.lang.String"/>
                                    <entry key="BUSINESSDATE" value="java.lang.String"/>
                                    <entry key="BOOKSOURCESYSTEMCODE" value="java.lang.String"/>

                                    <entry key="ACCOUNTCODE" value="java.lang.String"/>
                                    <entry key="ASSETTYPE" value="java.lang.String"/>
                                    <entry key="ASSETUNIT" value="java.lang.String"/>
                                    <entry key="ATLASFOLDERID" value="java.lang.String"/>
                                    <entry key="ATLASINSTRUMENTSTRUCTUREPATH" value="java.lang.String"/>

                                    <entry key="BOOKSOURCESYSTEM" value="java.lang.String"/>
                                    <entry key="CUSIP" value="java.lang.String"/>
                                    <entry key="DATASETFILTER" value="java.lang.String"/>
                                    <entry key="DATASETLABEL" value="java.lang.String"/>
                                    <entry key="EODTOTALVALUE" value="double"/>

                                    <entry key="ESMP" value="java.lang.String"/>
                                    <entry key="FOAGGRCODE" value="java.lang.String"/>
                                    <entry key="HOSTPRODID" value="java.lang.String"/>
                                    <entry key="INSTRUMENTEXPIRYDATE" value="java.lang.String"/>
                                    <entry key="INSTRUMENTMATURITYDATE" value="java.lang.String"/>

                                    <entry key="INSTRUMENTTYPE" value="java.lang.String"/>
                                    <entry key="ISIN" value="java.lang.String"/>
                                    <entry key="PROXYINSTRUMENTID" value="java.lang.String"/>
                                    <entry key="PROXYINSTRUMENTIDTYPE" value="java.lang.String"/>
                                    <entry key="PROXYINSTRUMENTTYPE" value="java.lang.String"/>

                                    <entry key="QUANTITY" value="double"/>
                                    <entry key="REGION" value="java.lang.String"/>
                                    <entry key="RIC" value="java.lang.String"/>
                                    <entry key="RISKFACTORNAME" value="java.lang.String"/>
                                    <entry key="RISKPARENTINSTRUMENTID" value="java.lang.String"/>

                                    <entry key="RISKPARENTINSTRUMENTIDTYPE" value="java.lang.String"/>
                                    <entry key="RISKSOURCESYSTEM" value="java.lang.String"/>
                                    <entry key="RISKSUBJECTCHORUSBOOKID" value="java.lang.String"/>
                                    <entry key="RISKSUBJECTID" value="java.lang.String"/>
                                    <entry key="RISKSUBJECTINSTRUMENTCOUNTERPARTYID" value="java.lang.String"/>

                                    <entry key="RISKSUBJECTINSTRUMENTID" value="java.lang.String"/>
                                    <entry key="RISKSUBJECTINSTRUMENTIDTYPE" value="java.lang.String"/>
                                    <entry key="RISKSUBJECTSOURCE" value="java.lang.String"/>
                                    <entry key="RISKSUBJECTTYPE" value="java.lang.String"/>
                                    <entry key="SENSITIVITYTYPE" value="java.lang.String"/>

                                    <entry key="SERIESDATE" value="java.lang.String"/>
                                    <entry key="SERIESDAY" value="java.lang.String"/>
                                    <entry key="SNAPVERSION" value="java.lang.String"/>
                                    <entry key="STRIKEVALUE" value="double"/>
                                    <entry key="THEOPRICE" value="double"/>

                                    <entry key="UNDERLYINGSECURITYID" value="java.lang.String"/>
                                    <entry key="UNDERLYINGSECURITYIDTYPE" value="java.lang.String"/>
                                    <entry key="VALUATIONSOURCECONTEXTLABELNAME" value="java.lang.String"/>
                                    <entry key="VALUE" value="double"/>
                                    <entry key="VARTYPE" value="java.lang.String"/>
                                </map>
                            </property>
                            <property name="indexes">
                                <list>
                                    <bean class="org.apache.ignite.cache.QueryIndex">
                                        <constructor-arg value="BUSINESSDATE"/>
                                        <property name="inlineSize" value="12"/>
                                    </bean>
                                    <bean class="org.apache.ignite.cache.QueryIndex">
                                        <constructor-arg value="BOOKSOURCESYSTEMCODE"/>
                                        <property name="inlineSize" value="12"/>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>

        <property name="discoverySpi">
            <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
                <property name="ipFinder">
                    <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
                        <property name="addresses">
                            <list>
                                <value>127.0.0.1:47500..47509</value>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
</beans>
