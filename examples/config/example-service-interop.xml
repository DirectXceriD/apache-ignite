<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="ignite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration">
        <property name="localHost" value="#{systemEnvironment['IGNITE_LOCALHOST']}"/>
        <property name="discoverySpi">
            <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
                <property name="ipFinder">
                    <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
                        <property name="addresses">
                            <list>
                                <value>#{systemEnvironment['IGNITE_LOCALHOST']}:47500</value>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>

        <property name="binaryConfiguration">
            <bean class="org.apache.ignite.configuration.BinaryConfiguration">
                <property name="nameMapper">
                    <bean class="org.apache.ignite.binary.BinaryBasicNameMapper">
                        <property name="simpleName" value="true"/>
                    </bean>
                </property>

                <property name="typeConfigurations">
                    <list>
                        <!--<bean class="org.apache.ignite.binary.BinaryTypeConfiguration">
                            <property name="typeName" value="org.apache.ignite.examples.servicegrid.interop.Model"/>
                        </bean>
                        <bean class="org.apache.ignite.binary.BinaryTypeConfiguration">
                            <property name="typeName" value="org.apache.ignite.examples.servicegrid.interop.Result"/>
                        </bean>-->
                        <bean class="org.apache.ignite.binary.BinaryTypeConfiguration">
                            <property name="typeName" value="org.apache.ignite.cache.CacheMode"/>
                            <property name="enum" value="true"/>
                            <property name="nameMapper">
                                <bean class="org.apache.ignite.binary.BinaryBasicNameMapper">
                                    <property name="simpleName" value="true"/>
                                </bean>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>

        <property name="serviceConfiguration">
            <list>
                <bean class="org.apache.ignite.services.ServiceConfiguration">
                    <property name="name" value="Calculator"/>
                    <property name="maxPerNodeCount" value="1"/>
                    <property name="totalCount" value="1"/>
                    <property name="service">
                        <bean class="org.apache.ignite.examples.servicegrid.interop.CalculatorService"/>
                    </property>
                </bean>
            </list>
        </property>

        <property name="metricsLogFrequency" value="0"/>
        <property name="failureDetectionTimeout" value="600000"/>
        <property name="clientFailureDetectionTimeout" value="600000"/>
    </bean>
</beans>
